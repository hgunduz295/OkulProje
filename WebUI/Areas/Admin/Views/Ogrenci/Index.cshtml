@model IEnumerable<Ogrenci>


    <a class="btn btn-success" asp-controller="Ogrenci" asp-action="Create">Yeni</a>
      <div class="card card-info">

  <div class="table-responsive">
<table class="table table-hover">
    <thead>
        <tr>
            <td> @Html.DisplayNameFor(model => model.Id)</td>
            <td> @Html.DisplayNameFor(model => model.Adi)</td>
            <td> @Html.DisplayNameFor(model => model.Soyadi)</td>
            <td> @Html.DisplayNameFor(model => model.TcNo)</td>
            <td> @Html.DisplayNameFor(model => model.Gsm)</td>
            <td> @Html.DisplayNameFor(model => model.Email)</td>
            <td> @Html.DisplayNameFor(model => model.DogumTarihi)</td>
            <td> @Html.DisplayNameFor(model => model.Cinsiyet)</td>
            <td>İşlem</td>
        </tr>
    </thead>
    <tbody>
       
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Adi</td>
                <td>@item.Soyadi</td>
                <td>@item.TcNo</td>
                <td>@item.Gsm</td>
                <td>@item.Email</td>
                <td>@item.DogumTarihi</td>
                <td>@item.Cinsiyet</td>

                <td>
                    <a asp-controller="Ogrenci" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Guncelle</a>
                    <a asp-controller="Ogrenci" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
            }
       
    </tbody>
</table>
</div></div>



