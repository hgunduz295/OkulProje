@model Brans

<form method="post" asp-controller="Brans" asp-action="Update">

    <div class="form-group row">
        <label asp-for="BransAdi" class="col-md-6 col-form-label"></label>

        <div class="col-md-6">
            <input type="text" asp-for="BransAdi" class="form-control" value="@Model.BransAdi"/>

        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
        <div class="col-md-6">
            <a class="btn btn-default" asp-action="Index" asp-controller="Brans">Listeye Geri Dön</a>
        </div>
    </div>
</form>