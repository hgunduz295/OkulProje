
@model LoginDto
@{
    Layout = "_GirisLayout";
    ViewBag.Title = "Giriş Yap";
}


				<div class="login100-pic js-tilt" data-tilt>
					<img src="/GirisTema/images/img-01.png" alt="IMG">
				</div>
				  @Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<form method="post" asp-controller="Kullanici" asp-action="Giris" class="login100-form validate-form">
					<span class="login100-form-title">
						Kullanıcı Girişi
					</span>

					<div class="wrap-input100 validate-input">
						    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

						<input   type="text" asp-for="UserName" aria-describedby="emailHelp" placeholder="Enter username" class="input100">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input" data-validate = "Şifre Gereklidir.">
					 @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
						<input type="password" asp-for="Password"  aria-describedby="emailHelp" placeholder="Enter Password"  class="input100"  >                        
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>
					
					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Giriş Yap
						</button>
					</div>

					<div class="text-center p-t-12">
						<span class="txt1">
							Forgot
						</span>
						<a class="txt2" href="#">
							Username / Password?
						</a>
					</div>

					<div class="text-center p-t-136">
						<a class="txt2" href="#">
							Create your Account
							<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
						</a>
					</div>
				</form>
